<?xml version="1.0"?>
<odoo>
  <data>
  <!--action to open To-do task list-->
  <act_window id="action_storehouse_app"
    name="Storehouse"
    res_model="storehouse.product"
    view_mode="tree,form" /> 
  <!-- menu item to open To-do task list -->

  <menuitem id="menu_storehouse_app"
    name="Storehouse"
    action="action_storehouse_app" /> 


    <record id="storehouse_product_view" model="ir.ui.view">
      <field name="name">product</field>
      <field name="model">storehouse.product</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>
          <field name="name"/>
          <field name="barcode"/>
          <field name="box"/>
        </tree>
      </field>
    </record>

    <record id="storehouse_product_view" model="ir.ui.view">
      <field name="name">box</field>
      <field name="model">storehouse.box</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

  </data>
</odoo>
